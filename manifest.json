{
  "manifest_version": 3,
  "name": "Looksmax Gray User Deleter",
  "version": "1.0",
  "description": "Automatically delete posts from gray users (#9e9e9e) on looksmax.org",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://looksmax.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}